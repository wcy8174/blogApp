<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="注册"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>

        <Button
            android:id="@+id/finishRegisterBtn"
            android:text="完成"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>


    //账号密码注册布局
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/accountRegisterText"
                android:hint="请输入账户注册用户名"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:id="@+id/passwordRegisterText"
                android:hint="请输入密码"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></EditText>

        </LinearLayout>


        <Button
            android:id="@+id/accountRegisterBtn"
            android:text="账号密码注册"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>


    </LinearLayout>

    //人脸注册布局
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/faceRegisterText"
                android:hint="请输入人脸注册用户名"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></EditText>

            <ImageView
                android:id="@+id/faceImage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/cameraBtn"
                android:text="照相"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>

            <Button
                android:id="@+id/faceRegisterBtn"
                android:text="人脸注册"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
